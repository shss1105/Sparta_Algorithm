public class Solution 
{
    public string solution(int n) 
    {
        string answer = "";

        int temp = n / 2;
        int temp2 = n % 2;

        if (temp2 == 0)
        {
            for (int i = 0; i < temp; i++)
            {
                answer += "수박";
            }
        }
        else
        {
            for (int i = 0; i < temp; i++)
            {
                answer += "수박";
            }
            answer += "수";
        }
        return answer;
    }
}
